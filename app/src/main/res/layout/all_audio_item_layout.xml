<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/audio_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16_px"
        tools:text="Audio name"
        android:layout_toStartOf="@id/audio_action_img"/>

    <ImageView
        android:id="@+id/audio_action_img"
        android:layout_width="@dimen/dp_24_px"
        android:layout_height="@dimen/dp_24_px"
        android:src="@drawable/ic_play"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_16_px"
        android:visibility="visible"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/audio_stop_action_img"
        android:layout_width="@dimen/dp_24_px"
        android:layout_height="@dimen/dp_24_px"
        android:src="@drawable/ic_pause"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_16_px"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>

</RelativeLayout>